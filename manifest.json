{
   "name": "fplugin",
   "description": "fplugin: live scoring, including substitutions and bonus points for your head-to-head draft league on draft.premierleague.com",
   "version":"0.0.5",
   "permissions": ["activeTab",
     "storage",
      "webRequest",
     "*://*.draft.premierleague.com/", "tabs"],
   "background": {
     "scripts": ["background.js"],
     "persistent": true
   },
   "browser_action": {
     "default_icon": {
       "16": "images/fplugingray16.png",
       "32": "images/fplugingray32.png",
       "48": "images/fplugingray48.png",
       "128": "images/fplugingray128.png"
     }
   },
   "manifest_version": 2
 }
